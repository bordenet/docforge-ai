    "test:e2e:headed": "npx playwright test --headed"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.58.2",
    "eslint": "^9.19.0",
    "fake-indexeddb": "^6.2.5",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "keywords": [
    "genesis",
    "document-assistant",
    "one-pager",
    "prd",
    "adr"
